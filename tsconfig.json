{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@utils": [
        "utils/index.ts"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@types": [
        "app/types.tsx"
      ],
      "@scripts/*": [
        "scripts/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@addresses": [
        "app/json/addresses.json"
      ],
      "@abis": [
        "app/abis/index.ts"
      ],
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}
